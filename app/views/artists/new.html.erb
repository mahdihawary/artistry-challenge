<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>


<%= form_for @artist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :age %>
<%= f.number_field :age %>
<br>
<%= f.label :instrument_id %>
<%= f.collection_select :instrument_ids, Instrument.all, :id, :name, prompt: true  %>
<br> 
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.submit %>
<% end %>